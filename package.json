{
  "name": "ai-dm-con",
  "version": "1.0.0",
  "description": "AI Dungeon Master - A D&D tabletop game powered by AI",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter @ai-dm/cli dev",
    "dev:web": "pnpm --filter @ai-dm/web-server dev & pnpm --filter @ai-dm/web-client dev",
    "dev:server": "pnpm --filter @ai-dm/web-server dev",
    "dev:client": "pnpm --filter @ai-dm/web-client dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "docs:api": "typedoc",
    "docs:api:watch": "typedoc --watch"
  },
  "keywords": ["dnd", "ai", "dungeon-master", "llm", "tabletop"],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "typedoc": "^0.25.0",
    "typedoc-plugin-markdown": "^4.0.0"
  }
}
